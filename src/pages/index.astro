---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import Hero from '../components/hero/Hero.astro';
import Experience from '../components/experience/experience.astro';
import Projects from '../components/projects/Projects.astro';
import Layout from '../layouts/Layout.astro';
import Bio from '../components/hero/Bio.astro';
import ScrollToTop from '../components/ScrollToTop.astro';
---

<Layout title="Hugo Brink | Fullstack Developer">
	<Header />

	<main
		class="self-center flex flex-col items-center justify-center cursor-default pattern-boxes pattern-gray-800 pattern-bg-transparent
  pattern-size-2 pattern-opacity-100"
	>
		<Hero />
		<div class="w-full flex items-center justify-center p-5">
			<div
				class="max-w-5xl flex flex-col md:flex-row items-center justify-center gap-x-10"
			>
				<Bio />
				<Experience />
			</div>
		</div>
		<Projects />
	</main>
	<ScrollToTop />
	<Footer />
</Layout>
