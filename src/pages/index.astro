---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import Hero from '../components/hero/Hero.astro';
import Experience from '../components/experience/experience.astro';
import Roadmap from '../components/roadmap/Roadmap.astro';
import Layout from '../layouts/Layout.astro';
import Bio from '../components/hero/Bio.astro';
---

<Layout title="Hugo Brink | Fullstack Developer">
	<Header />

	<main class="self-center flex flex-col items-center justify-center">
		<Hero />
		<div
			class="w-full flex items-center justify-center md:bg-[#1D3C72] p-5"
		>
			<div
				class="max-w-5xl flex flex-col md:flex-row items-center justify-center gap-x-10"
			>
				<Bio />
				<Experience />
			</div>
		</div>
		<div class="w-full bg-white">
			<Roadmap />
		</div>
	</main>
	<Footer />
</Layout>
