---
import { Image } from 'astro:assets';
---

<div class="max-w-3xl">
	<div
		class="flex flex-col md:flex-row justify-center items-center md:gap-x-10 text-white md:h-screen pt-20 md:pt-0"
	>
		<div class="">
			<h1
				class="text-3xl font-bold leading-none min-w-1/3 text-center py-4"
			>
				Hi, I'm <br />
				<div class="flex flex-row text-gray-400 pt-2">
					<p class="">Hugo Brink</p>
					<p class="animate-blink">|</p>
				</div>
			</h1>
		</div>

		<div class="flex justify-center min-w-1/3">
			<Image
				src="/img/profile.jpg"
				alt="Hugo Brink's profile picture"
				width={144}
				height={144}
				class="w-36 h-36 m-3 rounded-full object-cover shadow-lg hover:shadow-xl"
				loading="eager"
			/>
		</div>

		<div
			class="hidden md:flex flex-col items-start justify-center gap-2 min-w-1/3 leading-none"
		>
			<div class="flex flex-row gap-2 items-center justify-center">
				<img src="/assets/location.svg" alt="Location" />
				<p class="">Porto, Portugal</p>
			</div>
			<a
				class="hover:underline"
				href="mailto:hugobrinkcarvalho@gmail.com?subject=Personal%20Website:"
			>
				<div class="flex flex-row items-center justify-center gap-2">
					<img src="/assets/email.svg" alt="Mail" />
					<p class="">hugobrinkcarvalho@gmail.com</p>
				</div>
			</a>
			<a class="hover:underline" href="https://github.com/HugoBrink">
				<p class="flex flex-row items-center justify-center gap-2">
					<img src="/assets/github.svg" alt="Github" />
					@hugobrink
				</p>
			</a>
			<a
				class="hover:underline"
				href="https://www.linkedin.com/in/hugo-brink/"
			>
				<div class="flex flex-row items-center justify-center gap-2">
					<img
						src="/assets/linkedin.svg"
						width="25"
						height="25"
						alt="Linkedin"
					/>
					<p>hugo-brink</p>
				</div>
			</a>
		</div>

		<div
			class="flex md:hidden flex-row gap-2 items-center justify-center py-5 px-20 gap-x-5"
		>
			<a href="https://www.linkedin.com/in/hugo-brink/">
				<img
					src="/assets/linkedin.svg"
					alt="Linkedin"
					height="30"
					width="30"
				/>
			</a>
			<a href="https://github.com/HugoBrink">
				<img
					src="/assets/github.svg"
					alt="Github"
					height="30"
					width="30"
				/>
			</a>
			<a
				href="mailto:hugobrinkcarvalho@gmail.com?subject=Personal%20Website:"
			>
				<img
					src="/assets/email.svg"
					alt="Mail"
					height="30"
					width="30"
				/>
			</a>
		</div>
	</div>
</div>
