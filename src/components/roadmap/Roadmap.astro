---
const images = [
	{
		src: '/assets/roadmap/2016.svg',
		alt: '2016',
		title: 'Bachelor in Computer Science @ University of Coimbra',
		date: '2016-2021',
	},
	{
		src: '/assets/roadmap/2019.svg',
		alt: '2019',
		title: 'Eramus @ University of Twente',
		date: '2019-2020',
	},
	{
		src: '/assets/roadmap/2020.svg',
		alt: '2020',
		title: 'Web Developer @ Accenture',
		date: '2020-2022',
	},
	{
		src: '/assets/roadmap/Now.svg',
		alt: 'Now',
		title: 'Freelancer @ Nowhere',
		date: '2022-...',
	},
];
---

<div class="w-full bg-white flex justify-center items-center flex-col">
	<section class="max-w-5xl">
		<h1
			id="roadmap-title"
			class="text-2xl md:text-3xl font-bold leading-none my-4 text-center text-[#1D3C72]"
		>
			Roadmap
		</h1>
		<div
			class="flex flex-col md:flex-row justify-between items-center space-y-4 md:gap-x-4 md:space-y-0"
		>
			{
				images.map((img) => (
					<div class="flex flex-col items-center w-full md:w-1/4 gap-y-2">
						<img
							src={img.src}
							alt={img.alt}
							class="hidden md:flex"
						/>
						<div class="flex flex-col items-center justify-center text-center border-2 border-gray-500 shadow-sm shadow-gray-500 w-full p-4 h-40 cursor-pointer">
							<p class="text-base md:text-base text-black  font-semibold">
								{img.title}
							</p>
							<p class="text-xs md:text-sm text-gray-500 mt-2">
								{img.date}
							</p>
						</div>
					</div>
				))
			}
		</div>
	</section>
	<section aria-labelledby="skill-title" class="my-8 px-4 md:px-0">
		<h1
			id="skill-title"
			class="text-2xl md:text-3xl font-bold leading-none mb-4 text-center text-[#1D3C72]"
		>
			Skills
		</h1>
		<div class="grid grid-cols-1 md:grid-cols-2 gap-8">
			<div>
				<h2 class="text-xl font-semibold mb-4 text-[#1D3C72]">
					Hard Skills
				</h2>
				<ul class="list-disc pl-5 space-y-2">
					<li>React</li>
					<li>Astro</li>
					<li>TailwindCSS</li>
					<li>JavaScript</li>
					<li>Node.js</li>
					<li>Git</li>
				</ul>
			</div>
			<div>
				<h2 class="text-xl font-semibold mb-4 text-[#1D3C72]">
					Soft Skills
				</h2>
				<ul class="list-disc pl-5 space-y-2">
					<li>Problem Solving</li>
					<li>Communication</li>
					<li>Teamwork</li>
					<li>Adaptability</li>
					<li>Time Management</li>
					<li>Creativity</li>
				</ul>
			</div>
		</div>
	</section>
</div>
